<script>
function toggleSelectedFiles() {
    const filesList = document.getElementById('selected-files-list');
    const arrow = document.getElementById('selected-files-arrow');
    
    if (filesList.classList.contains('hidden')) {
        filesList.classList.remove('hidden');
        arrow.style.transform = 'rotate(90deg)';
    } else {
        filesList.classList.add('hidden');
        arrow.style.transform = 'rotate(0deg)';
    }
}

function updateAIInfo(result) {
    const aiInfo = document.getElementById('ai-selection-info');
    const aiFilesCount = document.getElementById('selected-files-count');
    const contextSize = document.getElementById('context-size-used');
    const aiReasoning = document.getElementById('ai-reasoning');
    const selectedFilesList = document.getElementById('selected-files-list');
    const aiBadge = document.getElementById('ai-badge');
    
    if (result.selected_files && result.selected_files.length > 0) {
        aiInfo.style.display = 'block';
        aiBadge.style.display = 'inline-block';
        
        aiFilesCount.textContent = result.selected_files.length;
        contextSize.textContent = result.context_size || 'Unknown';
        
        // Truncate reasoning if too long
        const reasoning = result.reasoning || 'AI selected the most relevant files';
        aiReasoning.textContent = reasoning.length > 100 ? 
            reasoning.substring(0, 100) + '...' : reasoning;
        
        // Populate files list
        selectedFilesList.innerHTML = result.selected_files
            .map(file => `<div class="py-1">${file}</div>`)
            .join('');
    }
}

// Make function available globally
window.updateAIInfo = updateAIInfo;
window.toggleSelectedFiles = toggleSelectedFiles;
</script>